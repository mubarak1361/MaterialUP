<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context="${relativePackage}.${activityClass}" >
    
    <ImageView  android:id="@+id/img_material"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:contentDescription="@null"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:weightSum="2">
        
        <LinearLayout 
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            tools:ignore="NestedWeights"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/txt_vibrant"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            
            <TextView 
                android:id="@+id/txt_light_vibrant"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            
            <TextView 
                android:id="@+id/txt_dark_vibrant"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            
        </LinearLayout>
        
         <LinearLayout 
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            tools:ignore="NestedWeights"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/txt_muted"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            
            <TextView 
                android:id="@+id/txt_light_muted"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            
            <TextView 
                android:id="@+id/txt_dark_muted"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            
        </LinearLayout>
        
    </LinearLayout>
  
</LinearLayout>
